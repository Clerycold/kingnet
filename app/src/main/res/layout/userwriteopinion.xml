<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgray">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.kingnet.UIpattern.Titledesign
                android:id="@+id/titledesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/writetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/writecontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:textCursorDrawable="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/colorblack"
                android:gravity="top"
                android:textSize="16sp"
                android:hint="請输入您的建議" />
            <TextView
                android:id="@+id/writetextnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/writepicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorblack"/>
            <Button
                android:id="@+id/dissimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorblack"
                android:visibility="gone"/>
            <Button
                android:id="@+id/writebtnok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </ScrollView>
    <com.kingnet.UIpattern.BottomButton
        android:id="@+id/buttombutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>