<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorMain</item>
        <item name="android:windowBackground">@color/colorMain</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>
    </style>
<!-- 應用animation動化 將activity取消 被Manifest的application取用-->
    <style name="ActivityInOutAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_open_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_open_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_close_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_close_out</item>
    </style>

    <style name="NormalTheme" parent="android:Theme.Holo.Light.NoActionBar">
    <item name="android:windowEnableSplitTouch">false</item>
    <item name="android:splitMotionEvents">false</item>
</style>

    <style name="StartStyle" parent="AppTheme">
        <item name="android:windowBackground">@drawable/start_windows</item>
    </style>


</resources>
